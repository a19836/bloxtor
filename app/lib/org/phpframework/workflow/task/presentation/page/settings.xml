<?xml version="1.0" encoding="UTF-8"?>
<task>
	<label>Page</label>
	<tag>page</tag>
	<files>
		<task_properties_html>WorkFlowTaskHtml.php</task_properties_html>
		<connection_properties_html>../common/WorkFlowConnectionHtml.php</connection_properties_html>
		<css>../../common/css/global.css</css>
		<css>../common/css/global.css</css>
		<css>css/WorkFlowTask.css</css>
		<js>../../common/js/global.js</js>
		<js>../common/js/global.js</js>
		<js>js/WorkFlowTask.js</js>
	</files>
	<settings>
		<task_menu>
			<show_start_task_menu>0</show_start_task_menu>
		</task_menu>
		<connection_menu>
			<show_properties_menu>1</show_properties_menu>
			<show_connector_types_menu>0</show_connector_types_menu>
			<show_overlay_types_menu>0</show_overlay_types_menu>
		</connection_menu>
		<callback>
			<on_load_task_properties>PageTaskPropertyObj.onLoadTaskProperties</on_load_task_properties>
			<on_submit_task_properties>PageTaskPropertyObj.onSubmitTaskProperties</on_submit_task_properties>
			<on_complete_task_properties>PresentationTaskUtil.onCompleteTaskProperties</on_complete_task_properties>
			
			<on_check_task_label>PageTaskPropertyObj.onCheckLabel</on_check_task_label>
			<on_cancel_task_label>PresentationTaskUtil.onCancelLabel</on_cancel_task_label>
			<on_complete_task_label>PageTaskPropertyObj.onCompleteLabel</on_complete_task_label>
			
			<on_success_task_cloning>PageTaskPropertyObj.onTaskCloning</on_success_task_cloning>
			<on_success_task_creation>PresentationTaskUtil.onTaskCreation</on_success_task_creation>
			
			<on_load_connection_properties>PresentationTaskUtil.onLoadConnectionProperties</on_load_connection_properties>
			<on_submit_connection_properties>PresentationTaskUtil.onSubmitConnectionProperties</on_submit_connection_properties>
			<on_complete_connection_label>PresentationTaskUtil.onCompleteConnectionLabel</on_complete_connection_label>
			<on_success_connection_drop>PresentationTaskUtil.onTaskConnection</on_success_connection_drop>
			
			<on_click_task>showTaskPropertiesIfExists</on_click_task>
			<on_click_connection>showConnectionPropertiesIfExists</on_click_connection>
		</callback>
		<center_inner_elements>0</center_inner_elements>
		<is_resizable_task>1</is_resizable_task>
		<allow_inner_tasks_outside_connections>1</allow_inner_tasks_outside_connections>
	</settings>
</task>
